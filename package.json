{
  "name": "hypothesis-api-client",
  "version": "0.0.1",
  "description": "A Hypothes.is API client for browser and server-side",
  "homepage": "",
  "author": {
    "name": "Haritz Medina",
    "email": "haritzmedina@gmail.com",
    "url": "https://haritzmedina.com"
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": ["hypothes.is", "hypothesis", "client", "browser", "node", "api"],
  "dependencies": {
    "jquery": "latest",
    "lodash": "latest"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "dotenv": "latest",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "jsdom": "git+https://github.com/haritzmedina/jsdom.git#master",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "puppeteer": "^1.2.0"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "haritzmedina/hypothesis-api-client",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "GPL-3.0"
}
